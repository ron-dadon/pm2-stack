{
  "name": "pm2-stack",
  "version": "0.1.0",
  "description": "A TypeScript library for Node.js",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check": "npm run type-check && npm run lint && npm run test:run",
    "fix": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit",
    "example": "npm run build && node examples/basic-example.js",
    "docs:serve": "cd docs && python3 -m http.server 8000",
    "docs:serve:node": "npx serve docs -p 8000",
    "docs:dev": "npm run build && npm run docs:serve",
    "docs:sync-version": "node scripts/sync-version.js",
    "docs:build": "npm run docs:sync-version && npm run build:prod",
    "prepublishOnly": "npm run docs:sync-version && npm run build:prod"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "library"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pm2": "6.0.13"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "prettier": "3.1.0",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}