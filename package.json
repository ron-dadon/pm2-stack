{
  "name": "pm2-stack",
  "version": "0.1.0",
  "description": "A powerful library for managing PM2 processes with ease",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/*.js",
    "dist/*.d.ts",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "dev": "vite build --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "check": "npm run type-check && npm run lint && npm run test:run",
    "fix": "npm run lint:fix && npm run format",
    "type-check": "tsc --noEmit",
    "example": "npm run build && node examples/basic-example.js",
    "docs:serve": "cd docs && python3 -m http.server 8000",
    "docs:serve:node": "npx serve docs -p 8000",
    "docs:dev": "npm run build && npm run docs:serve",
    "docs:sync-version": "node scripts/sync-version.js",
    "docs:build": "npm run docs:sync-version && npm run build:prod",
    "prepublishOnly": "npm run docs:sync-version && npm run build:prod",
    "semantic-release": "semantic-release",
    "semantic-release:dry-run": "semantic-release --dry-run"
  },
  "keywords": [
    "typescript",
    "nodejs",
    "library"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "pm2": "6.0.13"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^10.0.4",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "@types/node": "24.5.2",
    "@typescript-eslint/eslint-plugin": "8.44.1",
    "@typescript-eslint/parser": "8.44.1",
    "@vitest/coverage-v8": "3.2.4",
    "eslint": "8.57.1",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.1",
    "prettier": "3.1.0",
    "semantic-release": "^22.0.12",
    "typescript": "5.9.2",
    "vite": "7.1.7",
    "vite-plugin-dts": "4.5.4",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "release": {
    "branches": [
      "master",
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {"type": "feat", "release": "minor"},
            {"type": "fix", "release": "patch"},
            {"type": "perf", "release": "patch"},
            {"type": "revert", "release": "patch"},
            {"type": "docs", "release": "patch"},
            {"type": "style", "release": "patch"},
            {"type": "chore", "release": "patch"},
            {"type": "refactor", "release": "patch"},
            {"type": "test", "release": "patch"},
            {"type": "build", "release": "patch"},
            {"type": "ci", "release": "patch"},
            {"type": "BREAKING CHANGE", "release": "major"}
          ]
        }
      ],
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ],
    "tagFormat": "v${version}",
    "changelogFile": "CHANGELOG.md",
    "changelogTitle": "# Changelog",
    "npmPublish": true,
    "tarballDir": "dist"
  }
}